# Twitter Configuration
TWITTER_USERNAME=your_username
TWITTER_PASSWORD=your_password
TWITTER_EMAIL=your_email

# Google Sheets Configuration
GOOGLE_SHEETS_SPREADSHEET_ID= # ID of your Google Sheets document
GOOGLE_SHEETS_CREDENTIALS= # JSON string of your Google Service Account credentials

# Webhook Configuration
MAKE_WEBHOOK_URL=https://hook.eu1.make.com/your_webhook_id  # Your Make webhook URL for approvals
PORT=3000  # Port for the agent's webhook server

# Optional Configuration
TWITTER_DRY_RUN=false  # Set to true to skip actual Twitter posting

# Database Configuration
DATABASE_URL=postgres://user:password@host:5432/dbname

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Post Interval Configuration (in minutes)
POST_INTERVAL_MIN=90
POST_INTERVAL_MAX=180

# Random Interaction Configuration
TWITTER_RANDOM_INTERACT_MIN_HOURS=4    # Minimum hours between interaction cycles
TWITTER_RANDOM_INTERACT_MAX_HOURS=8    # Maximum hours between interaction cycles
TWITTER_RANDOM_INTERACT_MIN_DELAY=30   # Minimum delay between interactions in seconds
TWITTER_RANDOM_INTERACT_MAX_DELAY=90   # Maximum delay between interactions in seconds
TWITTER_RANDOM_INTERACT_TWEETS_COUNT=5 # Number of tweets to fetch for interaction
TWITTER_RANDOM_INTERACT_LIKE_CHANCE=0.4   # Probability of liking a tweet (0-1)
TWITTER_RANDOM_INTERACT_RETWEET_CHANCE=0.3 # Probability of retweeting (0-1)